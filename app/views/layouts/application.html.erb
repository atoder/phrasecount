                <div class="pulse_rays"></div>
            </div>
          </div>
        <nav>
          <%= link_to "Phrase Count", root_path, id: "logo", 
                      class: "center" %>
        </nav>
      </div>
</header>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
